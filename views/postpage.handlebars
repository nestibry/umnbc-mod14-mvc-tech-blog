<section>
    <div class="container">
        <div class="col-12 mb-4">
            <div class="card border-dark">
                <div class="card-header text-bg-dark">
                    <h4>{{title}}</h4>
                    <h6 class="fst-italic">Posted by {{user.name}} on {{format_date createdAt}}</h6>
                </div>
                <div class="card-body">
                    <p class="card-text">{{content}}</p>
                    <p class="card-text fst-italic">{{category.title}}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="col-12 mb-4">
            {{#if comments.length}}
            <h4>Comments</h4>
            {{#each comments}}
            <div class="card border-dark mb-2">
                <div class="card-body">
                    <h6 class="card-text">{{content}}</h6>
                    <p class="card-text fst-italic">Posted by {{user.name}} on {{format_date user.createdAt}}</p>
                </div>
            </div>
            {{/each}}
            {{else}}
            <h4>No comments for this post yet.</h4>
            {{/if}}
        </div>
    </div>

</section>