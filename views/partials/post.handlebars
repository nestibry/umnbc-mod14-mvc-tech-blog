<div class="container">
    <a href="https://www.espn.com" style="text-decoration: none; color: inherit;">
        <div class="col-12 mb-4">
            <div class="card border-dark">
                <div class="card-header text-bg-dark">
                    <h4>{{title}}</h4>
                    <h6 class="fst-italic">Posted by {{user.name}} on {{format_date createdAt}}</h6>
                </div>
                <div class="card-body">
                    <p class="card-text">{{content}}</p>
                    <p class="card-text fst-italic">{{category.title}}</p>
                </div>
            </div>
        </div>
    </a>
</div>