<section>
    <div class="container">
        <div class="col-12 mb-4">
            <h1>Dashboard</h1>
        </div>
        <a class="d-flex align-items-center justify-content-center btn btn-outline-primary mb-4" href="/dashboard/new-post">
            <h5 class="my-auto text-center">New Post</h5>
        </a>
    </div>


    {{#each posts as |post|}}
    <div class="container">
        <a href="/dashboard/edit-post/{{id}}" style="text-decoration: none; color: inherit;">
            <div class="col-12 mb-4">
                <div class="card border-dark">
                    <div class="card-body">
                        <h4>{{title}}</h4>
                        <h6 class="fst-italic">Posted on {{format_date createdAt}}</h6>
                    </div>
                </div>
            </div>
        </a>
    </div>
    {{/each}}

</section>